<style>
  .page-hero {
    padding: 3rem 0;
    background: #f8fafc;
    text-align: center;
  }

  .page-hero h1 {
    margin-bottom: 1rem;
  }

  .lead {
    font-size: 1.25rem;
    color: #6b7280;
    margin: 0;
  }

  .download-section {
    padding: 4rem 0;
  }

  .download-content {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 3rem;
    margin-bottom: 4rem;
  }

  .app-showcase {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    align-items: center;
  }

  .app-image {
    width: 100%;
    height: auto;
    border-radius: 1rem;
    box-shadow: 0 10px 25px -3px rgba(0, 0, 0, 0.1);
  }

  .app-info h2 {
    margin-bottom: 1rem;
  }

  .app-features {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
    margin: 2rem 0;
  }

  .feature {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    color: #374151;
  }

  .feature-icon {
    font-size: 1rem;
  }

  .download-buttons {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-top: 2rem;
  }

  .download-btn {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    justify-content: center;
  }

  .direct-download {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    justify-content: center;
  }

  .download-sidebar {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .info-card {
    background: white;
    padding: 2rem;
    border-radius: 1rem;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
  }

  .info-card h3 {
    margin-bottom: 1.5rem;
    color: #111827;
  }

  .requirements-list,
  .changelog {
    list-style: none;
    padding: 0;
  }

  .requirements-list li,
  .changelog li {
    padding: 0.5rem 0;
    color: #374151;
    border-bottom: 1px solid #f3f4f6;
  }

  .requirements-list li:last-child,
  .changelog li:last-child {
    border-bottom: none;
  }

  .requirements-list li::before {
    content: '‚úì';
    color: #10b981;
    margin-right: 0.5rem;
    font-weight: bold;
  }

  .changelog li::before {
    content: '‚Ä¢';
    color: #2563eb;
    margin-right: 0.5rem;
    font-weight: bold;
  }

  .version-info {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .version-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .label {
    color: #6b7280;
    font-size: 0.875rem;
  }

  .value {
    color: #111827;
    font-weight: 500;
  }

  .installation-guide {
    background: #f8fafc;
    padding: 3rem;
    border-radius: 1rem;
  }

  .installation-guide h2 {
    text-align: center;
    margin-bottom: 3rem;
  }

  .guide-steps {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .guide-step {
    display: flex;
    align-items: flex-start;
    gap: 2rem;
  }

  .guide-step:nth-child(even) {
    flex-direction: row-reverse;
  }

  .step-number {
    width: 3rem;
    height: 3rem;
    background: #2563eb;
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 600;
    font-size: 1.25rem;
    flex-shrink: 0;
  }

  .step-content {
    flex: 1;
  }

  .step-content h3 {
    margin-bottom: 0.5rem;
  }

  @media (max-width: 1024px) {
    .download-content {
      grid-template-columns: 1fr;
    }

    .app-showcase {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .guide-step,
    .guide-step:nth-child(even) {
      flex-direction: column;
      text-align: center;
    }
  }

  @media (max-width: 768px) {
    .app-features {
      grid-template-columns: 1fr;
    }

    .download-buttons {
      gap: 0.75rem;
    }

    .installation-guide {
      padding: 2rem;
    }
  }
</style>
